    "base-version": "6.6",
    "base": "io.qt.qtwebengine.BaseApp",
    "sdk": "org.kde.Sdk",
    "command": "sieveeditor",
    "tags": ["nightly"],
    "rename-icon": "sieveeditor",
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.kde.kwalletd6"
